@import "reset.css"

body
	background-color #F7F7F7

.notfound
	text-align center
	font-size 2em
	margin-top 50px

#dash
	position absolute
	top 50%
	left 50%

.widget
	position absolute
	background-color #ddd
	z-index 3
	margin 10px

	canvas
		position relative
		top 30px
		left 10px

	.legend
		position absolute
		top 5px
		left 5px

		.title
			margin 0.5em
			border-width 0 0 0 1em
			padding 0 0.3em
